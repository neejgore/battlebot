# Polymarket Battle-Bot V2.1 Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# POLYMARKET CREDENTIALS (Required for live trading)
# =============================================================================

# Your wallet private key (DO NOT COMMIT THIS!)
POLYMARKET_PRIVATE_KEY=your_private_key_here

# API credentials (optional, for authenticated endpoints)
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here
POLYMARKET_API_PASSPHRASE=your_api_passphrase_here

# =============================================================================
# ANTHROPIC API (Required for AI analysis)
# =============================================================================

ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Starting bankroll in USDC
INITIAL_BANKROLL=1000

# Fractional Kelly multiplier (0.1 = 10% of full Kelly)
FRACTIONAL_KELLY=0.1

# Maximum position size in USDC
MAX_POSITION_SIZE=25

# Minimum price change to trigger AI analysis (0.02 = 2 cents)
MIN_PRICE_CHANGE=0.02

# Minimum edge required to execute a trade (0.08 = 8%)
MIN_EDGE=0.08

# Minimum AI confidence to execute a trade (0.40 = 40%)
MIN_CONFIDENCE=0.40

# Maximum days until resolution to consider a market (skip very long-horizon bets)
MAX_DAYS_TO_RESOLUTION=45

# Total amount deposited (used for P&L baseline on dashboard)
TOTAL_DEPOSITS=150

# Profit lock threshold: exit when gain exceeds this fraction of cost basis
PROFIT_LOCK_PCT=0.50

# Maximum positions per correlation cluster (prevents DOGE-cut overload)
MAX_CLUSTER_POSITIONS=3

# =============================================================================
# MARKET DISCOVERY
# =============================================================================

# How often to refresh/discover markets (in minutes)
# 60 = hourly, 1440 = daily
MARKET_REFRESH_MINUTES=15

# =============================================================================
# OPERATIONAL MODE
# =============================================================================

# Dry run mode: logs what would be traded without placing real orders
# Set to 'true' for testing, 'false' for live trading
DRY_RUN=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
LOG_FILE=logs/battlebot.log

# TESTING ONLY - Simulate random price movement for dry run testing
# Set to false for production!
SIMULATE_PRICES=true

# =============================================================================
# MARKET INTELLIGENCE (Information Advantage Features)
# =============================================================================

# Brave Search API key for real-time news (optional but recommended)
# Get free API key at https://brave.com/search/api/ - includes $5/month free
# Falls back to Google News RSS if not configured
BRAVE_API_KEY=your_brave_api_key_here

# Enable news and domain data fetching for AI analysis
# This gives the AI current information that may not be priced into markets
USE_INTELLIGENCE=true

# Prefer markets with higher inefficiency scores
# Inefficient markets = more opportunity for edge
PREFER_INEFFICIENT_MARKETS=true

# Use contrarian timing signals
# Boosts edge when betting against recent overreactions
USE_CONTRARIAN_TIMING=true

# Minimum inefficiency score to prioritize a market (0-1)
# Higher = more selective, lower = more markets
MIN_INEFFICIENCY_SCORE=0.1
